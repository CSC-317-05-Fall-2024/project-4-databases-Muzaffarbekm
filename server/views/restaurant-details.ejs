<!DOCTYPE html>
<html lang="en">
<head>
    <title>Travel Guide</title>
    <link rel="stylesheet" href="/styles.css"/>
    <link rel="stylesheet" href="/restaurant-details-styles.css"/>
    <link rel="icon" type="image/png" href="/images/icon.svg">
</head>

<body>
    <header></header>
    <nav></nav>

    <% if (restaurant) { %>
        <div class="restaurant-details">
            <img class="restaurant-details-img" src="<%= restaurant.photo %>" alt="<%= restaurant.name %>">
            <div class="restaurant-info">
                <h1><%= restaurant.name %></h1>
                <h2>📍 <%= restaurant.address %></h2>
                <h2>📞 <%= restaurant.phone %></h2>
            </div>
        </div>

        <section class="reviews-section">
            <h2>Reviews</h2>
            <% if (reviews && reviews.length > 0) { %>
                <div class="reviews-container">
                    <% reviews.forEach(review => { %>
                        <div class="review-card">
                            <div class="review-rating">
                                <% for(let i = 0; i < review.rating; i++) { %>
                                    ⭐
                                <% } %>
                            </div>
                            <p class="review-content">"<%= review.content %>"</p>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="no-reviews">No reviews yet</p>
            <% } %>
        </section>
    <% } else { %>
        <div class="error-message">
            <h1>Restaurant not found</h1>
            <a href="/restaurants">Back to Restaurants</a>
        </div>
    <% } %>

    <footer></footer>
    <script src="/scripts/header.js"></script>
</body>
</html>