<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Guide</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/restaurants.css">
    <script defer src="/scripts/header.js"></script>
    <script defer src="/scripts/restaurantCards.js"></script>
</head>
<body>
    <header></header>

    <div class="banner">
        <img src="/images/hawaii-1.jpg" alt="Banner Image of Location">
        <h1>Restaurants in Kauai</h1>
    </div>

    <nav></nav>

    <main class="restaurants">
        <% if (restaurants && restaurants.length > 0) { %>
            <% restaurants.forEach(restaurant => { %>
                <div class="restaurant-card" data-id="<%= restaurant.id %>">
                    <img src="<%= restaurant.photo %>" alt="<%= restaurant.name %>">
                    <div class="restaurant-info">
                        <h2><%= restaurant.name %></h2>
                        <p class="phone"><%= restaurant.phone %></p>
                        <p class="address"><%= restaurant.address %></p>
                        <button class="delete-btn" onclick="deleteRestaurant(<%= restaurant.id %>)">Delete</button>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No restaurants found.</p>
        <% } %>
    </main>

    <footer></footer>
</body>
</html>